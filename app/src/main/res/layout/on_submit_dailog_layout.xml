<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Remaining Time"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timeValue"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="00:09:10"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="22sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:columnCount="2"
        android:padding="8dp"
        android:rowCount="3">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/answered_background"
            android:padding="10dp"
            android:text="5"
            android:id="@+id/answered"
            android:textAlignment="center"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="Answered"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/not_answered_background"
            android:padding="10dp"
            android:text="1"
            android:id="@+id/notAns"
            android:textAlignment="center"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="Not Answered"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/not_visited_background"
            android:padding="10dp"
            android:text="16"
            android:id="@+id/notVisited"
            android:textAlignment="center"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="Not Visited"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/review_background"
            android:padding="10dp"
            android:text="0"
            android:id="@+id/reviewLetter"
            android:textAlignment="center"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="Review Later"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />
    </GridLayout>

    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="You cannot edit your response when you are finished"
        android:textColor="@color/textColorPrimary"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/questionBackground"
            android:text="Resume"

            android:textColor="@color/textColorPrimary" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/questionBackground"
            android:text="Submit"
            android:textColor="@color/textColorPrimary" />
    </LinearLayout>

</LinearLayout>
