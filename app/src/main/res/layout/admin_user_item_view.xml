<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/userIamge"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true" android:layout_margin="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userItemName"
        android:textColor="@color/black"
        android:text="Name"
        android:layout_toEndOf="@id/userIamge"
        android:textSize="20dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailItem"
        android:textColor="@color/black"
        android:text="admin@gmail.com"
        android:layout_toEndOf="@id/userIamge"
        android:textSize="15dp"
        android:layout_below="@id/userItemName"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#A2A2A2"
        android:layout_below="@id/userIamge"
        android:layout_marginTop="10dp"/>

</RelativeLayout>